{
  "rules": {
    "terminology": true,
    "apostrophe": true,
    "diacritics": true,
    "common-misspellings": true,
    "stop-words": {
      "severity": "warning",
      "exclude": [
        "divide and conquer",
        "we all know that",
        "never say never"
      ]
    },
    "write-good": {
      "severity": "warning",
      "adverb": false,
      "cliches": false,
      "illusion": true,
      "passive": false,
      "so": false,
      "thereIs": false,
      "tooWordy": false,
      "weasel": false
    },
    "alex": {
      "profanitySureness": 2,
      "allow": [
        "color",
        "easy",
        "invalid",
        "just",
        "obvious",
        "simple",
        "special",
        "straightforward",
        "vomit",
        "whitespace"
      ]
    }
  },
  "filters": {
    "comments": true
  }
}
