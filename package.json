{
  "name": "washingcode",
  "private": true,
  "author": {
    "name": "Artem Sapegin",
    "url": "https://sapegin.me"
  },
  "homepage": "https://github.com/sapegin/washingcode",
  "repository": "sapegin/washingcode",
  "license": "CC BY-NC-ND 4.0",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "lint": "npm run lint:js && npm run lint:text && npm run lint:spell",
    "lint:js": "eslint . --cache --fix",
    "lint:text": "textlint \"manuscript/**/*.md\"",
    "lint:spell": "cspell \"manuscript/**/*.md\"",
    "lint:typos": "command -v typos > /dev/null 2>&1 && typos 'manuscript'",
    "lint:text:fix": "npm run lint:text -- --fix",
    "lint:typos:fix": "typos 'manuscript' --write-changes",
    "format": "prettier --log-level warn --write \"**/*.{js,md}\"",
    "pretest": "npm run lint",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules nodemon --exec jest --watch 'manuscript/*.*'",
    "posttest": "npm run format",
    "prepare": "husky"
  },
  "keywords": [],
  "dependencies": {
    "immer": "9.0.18",
    "immutable": "4.0.0",
    "lodash": "4.17.21",
    "qs": "6.11.2",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@testing-library/react": "^13.4.0",
    "cspell": "^8.8.1",
    "eslint": "^8.56.0",
    "eslint-config-tamia": "^8.1.3",
    "glob": "^8.0.3",
    "husky": "^9.0.10",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^29.3.1",
    "lint-staged": "^15.2.1",
    "nodemon": "^3.0.3",
    "prettier": "3.2.5",
    "remark": "^15.0.1",
    "textlint": "^14.0.4",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-rule-apostrophe": "^2.0.0",
    "textlint-rule-common-misspellings": "^1.0.1",
    "textlint-rule-diacritics": "^1.0.0",
    "textlint-rule-no-dead-link": "^5.1.2",
    "textlint-rule-stop-words": "^5.0.1",
    "textlint-rule-terminology": "^5.0.0",
    "textlint-rule-write-good": "^2.0.0",
    "unist-util-visit": "^5.0.0",
    "vm2": "^3.9.13"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)(spec|test).js",
      "**/__tests__/**/*.mjs",
      "**/?(*.)(spec|test).mjs"
    ],
    "transform": {}
  },
  "lint-staged": {
    "*.{js,mjs,md}": "prettier --write",
    "*.js": "eslint --cache --fix",
    "*.md": "textlint --fix"
  }
}
